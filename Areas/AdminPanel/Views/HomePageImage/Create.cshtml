@model HomeBackgroundImages
<div class="row">
    <div class="col-md-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Create photo</h4>
                <p class="card-description">
                    Basic form layout
                </p>
                <form class="forms-sample" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label asp-for="Name" >Username</label>
                        <input asp-for="Name" class="form-control" id="exampleInputUsername1" placeholder="Username">
                    </div>
                    <div class="form-group">
                        <label asp-for="SubTitle">SubTitle </label>
                        <input asp-for="SubTitle" class="form-control" id="exampleInputEmail1" placeholder="SubTitle">
                        <span asp-validation-for="SubTitle" class="text-danger"></span>
                    </div>   
                    


                    <div class="form-group">
                        <label asp-for="ImageFile">Image </label>
                        <input asp-for="ImageFile" class="form-control" id="exampleInputEmail1" placeholder="Image">
                        <span asp-validation-for="ImageFile" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Title">Title </label>
                        <input asp-for="Title" class="form-control" id="exampleInputEmail1" placeholder="Title">
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Submit</button>
                    <button class="btn btn-light" asp-controller="index">Cancel</button>
                </form>
            </div>
        </div>
    </div>


</div>